<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="expertPanel" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.InputController">
    <JFXListView fx:id="list" layoutY="100.0" prefHeight="300.0" prefWidth="500.0"/>
    <JFXTextField fx:id="characteristicsTextField" layoutX="140.0" layoutY="6.0"
                  onKeyPressed="#clickButtonAddCharacteristic"/>
    <JFXTextField fx:id="subjectsTextField" layoutX="140.0" layoutY="46.0" onKeyPressed="#clickButtonAddSubject"/>
    <JFXButton fx:id="characteristicsAddButton" layoutX="342.0" layoutY="15.0" mnemonicParsing="false"
               onAction="#addCharacteristic" prefHeight="38.0" prefWidth="158.0" text="Добавить"/>
    <JFXButton fx:id="subjectsAddButton" layoutX="342.0" layoutY="55.0" mnemonicParsing="false" onAction="#addSubject"
               prefHeight="38.0" prefWidth="158.0" text="Добавить"/>
    <Label layoutX="13.0" layoutY="20.0" text="Характеристики"/>
    <Label layoutX="27.0" layoutY="60.0" text="Объекты"/>
    <JFXButton fx:id="cancel" layoutX="0.0" layoutY="400.0" mnemonicParsing="false" onAction="#cancel"
               prefHeight="100.0" prefWidth="250.0" text="Отмена" style="-fx-font-size:24px;">
    </JFXButton>
    <JFXButton fx:id="ok" layoutX="250.0" layoutY="400.0" mnemonicParsing="false" onAction="#saveData"
               prefHeight="100.0" prefWidth="250.0" text="Сохранить" style="-fx-font-size:24px;">
    </JFXButton>

</AnchorPane>
